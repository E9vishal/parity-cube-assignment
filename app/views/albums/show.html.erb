<%- model_class = @album.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @album.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:images_count) %>:</strong></dt>
  <dd><%= @album.images_count %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @album.user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              albums_path, :class => 'btn'  %>
  <% if user_signed_in? and current_user.email == @album.user.email %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_album_path(@album), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              album_path(@album),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>			  
</div>
<% if user_signed_in? and current_user.email == @album.user.email %>
	<%= link_to "New Image" , new_photo_path(:album_id => @album.id), :class => 'btn' %>
<% end%>
  <div class="clear"></div>
<div id="photos">
  <% for photo in @album.photos %>
    <div class="painting">
      <%= image_tag photo.image_url(:thumb) if photo.image? %>
      <div class="name"><%= photo.title %></div>
      <div class="actions">
		<% if user_signed_in? %>
        <%= link_to "edit", edit_photo_path(photo) %> |
        <%= link_to "remove", photo, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

